@model doancoso.Models.SemesGradesStudent

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    List<Grade> grades = Model.Grades;
    int gradeCount = grades.Count;
    List<int> gradeNums = Model.GradeNums;
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>SemesGradesStudent</h4>
    <hr />
    <dl class="row">
        @for (int i = 0; i < gradeCount; i++)
        {
            <dt class="col-sm-2">
                <p>@(grades[i].Name + " (max: " + grades[i].maxGrade + ")")</p>
                <p>@(grades[i].Description)</p>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => gradeNums[i])
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalGrade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalGrade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.semester)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.semester.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
