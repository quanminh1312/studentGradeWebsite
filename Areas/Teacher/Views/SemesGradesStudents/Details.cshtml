@model doancoso.Models.SemesGradesStudent

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
    List<Grade> grades = Model.Grades;
    int gradeCount = grades.Count;
    List<int> gradeNums = Model.GradeNums;
}

<h1>Details</h1>

<div>
    <h4>SemesGradesStudent</h4>
    <hr />
    <dl class="row">
        @for (int i = 0; i < gradeCount; i++)
        {
            <dt class="col-sm-2">
                <p>@(grades[i].Name + " (max: " + grades[i].maxGrade + ")")</p>
                <p>@(grades[i].Description)</p>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => gradeNums[i])
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalGrade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalGrade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pending)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pending)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.semester)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.semester.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.student)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.student.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
